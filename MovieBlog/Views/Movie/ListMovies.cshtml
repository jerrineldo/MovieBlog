@model IEnumerable<MovieBlog.Models.MovieDto>
@{
    ViewBag.Title = "ListMovies";
}

<h2 class="center">List of Movies</h2>
<div class="center">
    @Html.ActionLink("Create New Movie", "Create", "Movie", new { }, null)
</div>

@foreach (var item in Model)
{
    //Use server rendering to determine an image
    string pic = "/Content/Movies/default.jpg";
    string alt = "No Profile Picture Provided.";
    if (item.MovieHasPic)
    {
        pic = "/Content/Movies/" + item.MovieID + "." + item.PicExtension;
        alt = "Picture of " + item.Title;
    }
    <div class="movie">
        <div class="imagecontainer">
            <a href="@pic" title="@alt">
                <img src="@pic" alt="@alt" />
            </a>
        </div>
        <div class="moviename"><h4>@item.Title  <span>(@item.YearReleased)</span></h4></div>
        <div class="moviereview">@item.Review</div>
        <div class="admintab">
            @Html.ActionLink("Edit", "UpdateMovie", "Movie", new { id = item.MovieID }, null) |
            @Html.ActionLink("Details", "MovieDetails", "Movie", new { id = item.MovieID }, null)
        </div>

    </div>
}

