@model MovieBlog.Models.ViewModels.ShowMovie
@{
    ViewBag.Title = "Update";
}


@Html.ActionLink("Back to List", "ListMovies", "Movie", new { }, null)
<h2 class="center">Update : @Model.Movie.Title</h2>

<div class="updateform">
    <form action="/Movie/UpdateMovie/@Model.Movie.MovieID" method="POST" name="movieform" enctype="multipart/form-data">
        <div class="form_inputfield center">
            <label for="Title">Title :</label>
            <input id="Title" name="Title" type="text" value="@Model.Movie.Title" />
        </div>
        <div class="form_inputfield center">
            <label for="Yearreleased">Year : </label>
            <input id="Yearreleased" name="YearReleased" type="text" value="@Model.Movie.YearReleased" />
        </div>
        <div class="form_inputfield center">
            <label for="Review">Review:</label>
            <textarea id="Review" name="Review">@Model.Movie.Review</textarea>
        </div>
        <div class="form_inputfield center">
            <label for="director">Director : </label>
            <select name="DirectorID" id="director" value='2' default=@Model.Movie.DirectorID>
                @foreach (var director in Model.Directors)
                {
                    <option value="@director.DirectorID">@director.FirstName @director.LastName</option>
                }

            </select>
        </div>
        <input type="number" name="MovieId" value="@Model.Movie.MovieID" style="display:none;" />
        <div class="center">
            <input type="submit" value="Save" />
        </div>
        <div class="form_inputfield center">
            <label for="MoviePic">Picture:</label>
            <input type="file" name="MoviePic" id="MoviePic" class="choosefile"/>
        </div>
    </form>
</div>
<script>
    document.getElementById('director').value = @Model.Movie.DirectorID;
</script>